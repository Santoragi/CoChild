<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background Layer -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#D9D9D9" />
        </shape>
    </item>

    <!-- Border Layer -->
    <item android:top="2dp"
        android:right="2dp"
        android:left="2dp"
        android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#D9D9D9" />
            <stroke
                android:color="#2D9596"
                android:width="2dp" />
        </shape>
    </item>

</selector>